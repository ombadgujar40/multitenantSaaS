// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  Domain String?
  employees Employee[]
  customers Customer[]
  projects  Project[]
  createdAt DateTime   @default(now())

  chatGroups   ChatGroup[]
  choosedPlans ChoosedPlan[]
}

model Employee {
  id           Int           @id @default(autoincrement())
  org          Organization  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId        Int
  name         String
  email        String        @unique
  password     String
  role         String        @default("employee") // 'admin' or 'employee'
  jobPosition  String?
  tasks        Task[]
  groupMembers GroupMember[] // <-- ADD THIS
  createdAt    DateTime      @default(now())
}

model Customer {
  id           Int           @id @default(autoincrement())
  org          Organization  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId        Int
  name         String
  email        String        @unique
  password     String
  projects     Project[]
  groupMembers GroupMember[] // <-- ADD THIS
  createdAt    DateTime      @default(now())
}

model Project {
  id              Int          @id @default(autoincrement())
  org             Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId           Int
  customer        Customer?    @relation(fields: [customerId], references: [id])
  customerId      Int?
  name            String
  description     String?
  status          String       @default("pending") // pending, active, completed
  tasks           Task[]
  chats           Chat[]
  deliverableLink String?
  createdAt       DateTime     @default(now())
  dueDate         DateTime?

  chatGroups ChatGroup[]
}

model Task {
  id           Int       @id @default(autoincrement())
  project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    Int
  assignedTo   Employee? @relation(fields: [assignedToId], references: [id])
  assignedToId Int?
  title        String
  description  String?
  status       String    @default("pending") // pending, in_progress, completed
  dueDate      DateTime?
  createdAt    DateTime  @default(now())
}

model Chat {
  id         Int      @id @default(autoincrement())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId  Int
  senderId   Int
  senderType String // 'employee' or 'customer'
  message    String
  createdAt  DateTime @default(now())
}

model ChatGroup {
  id            Int           @id @default(autoincrement())
  project       Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId     Int           @unique
  name          String
  org           Organization  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId         Int
  members       GroupMember[]
  messages      Message[]
  createdAt     DateTime      @default(now())
  lastMessageAt DateTime?
}

model GroupMember {
  id         Int       @id @default(autoincrement())
  group      ChatGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId    Int
  // exactly one of employeeId or customerId will be set
  employee   Employee? @relation(fields: [employeeId], references: [id])
  employeeId Int?
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId Int?
  role       String    @default("member") // e.g., admin, member
  joinedAt   DateTime  @default(now())

  @@index([groupId])
  @@index([employeeId])
  @@index([customerId])
}

model Message {
  id         Int       @id @default(autoincrement())
  group      ChatGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId    Int
  senderId   Int
  senderType String // 'employee' | 'customer' | 'system'
  text       String
  meta       Json? // optional metadata (attachments, edits)
  createdAt  DateTime  @default(now())

  @@index([groupId])
  @@index([createdAt])
}

model PlatformAdmin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("superAdmin")
  createdAt DateTime @default(now())
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  actorId    Int? // nullable for system actions
  actorEmail String?
  action     String
  target     Json?
  metadata   Json?
  createdAt  DateTime @default(now())

  @@index([actorId])
  @@index([createdAt])
}

model ChoosedPlan {
  id    Int          @id @default(autoincrement())
  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId Int
  Domain String
  Plan String
  Status String
  createdAt DateTime @default(now())
}



model ErrorLog {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())

  // What happened
  eventType  String                // e.g., "unhandled_exception", "db_error"
  severity   String                // CRITICAL | HIGH | MEDIUM | LOW | INFO
  message    String                // short text summary of the error

  // Optional helpful context (keep small!)
  tenantId   Int?                  
  userId     Int?                  
  payload    Json?                 // metadata: requestId, stack, ip, routeName

  @@index([eventType])
  @@index([severity])
  @@index([tenantId])
  @@index([userId])
  @@map("error_logs")
}

